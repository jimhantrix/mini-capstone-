<h1>Edit Recipe:</h1>
<%= form_tag "/products/#{@products.id}", :class => "form-horizontal", method: :patch do %>

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="title" placeholder="Title">
    </div>
  </div>
  <div class="form-group">
    <label for="chef" class="col-sm-2 control-label">Chef</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="chef" placeholder="Chef">
    </div>
  </div>
  <div class="form-group">
    <label for="ingredients" class="col-sm-2 control-label">Ingredients</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="ingredients" placeholder="Ingredients">
    </div>
  </div>
  <div class="form-group">
    <label for="directions" class="col-sm-2 control-label">Directions</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="directions" placeholder="Directions">
    </div>
  </div>
  <div class="form-group">
    <label for="image" class="col-sm-2 control-label">Image URL</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="image" placeholder="Image URL">
    </div>
  </div>
  <div class="form-group">
    <label for="prep_time" class="col-sm-2 control-label">Prep Time</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="prep_time" placeholder="Prep Time">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Edit Recipe</button>
    </div>
  </div>
<% end %>
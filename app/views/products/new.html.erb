    <section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">
            <h1>Create a new nerdy product:</h1>

            <%= form_tag '/products', method: :post do %>

              <div>
                <%= label_tag :name %>
                <%= text_field_tag :name %>
              </div>
              
              <div>
                <%= label_tag :price %>
                <%= text_field_tag :price %>
              </div>
              
              <div>
                <%= label_tag :description %>
                <%= text_field_tag :description %>
              </div>

              <div>
                <%= label_tag :supplier %>
                <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
              </div>

              <div>
                <%= label_tag :image %>
                <%= text_field_tag :image %>
              </div>

              <%= submit_tag "Product created!" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>